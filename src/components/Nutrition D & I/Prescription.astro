<div class="p-6 bg-white text-gray-800 rounded-lg shadow-md max-w-3xl mx-auto">
  <h2 class="text-lg font-semibold mb-4">Nutrition Prescription</h2>

  <!-- Prescription Name -->
  

  <!-- Description -->
  <div class="mb-4">
    <label class="block text-sm font-medium text-gray-700 mb-1" for="description">Description</label>
    <textarea
      id="description"
      placeholder="Enter a brief description"
      class="w-full p-2 bg-gray-100 text-gray-800 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
      rows="3"
    ></textarea>
  </div>

  <!-- Dosage -->
  <div class="mb-4">
    <label class="block text-sm font-medium text-gray-700 mb-1" for="dosage">Dietary Intake</label>
    <input
      type="text"
      id="dosage"
      placeholder="e.g., 500mg"
      class="w-full p-2 bg-gray-100 text-gray-800 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
  </div>

  <!-- Additional Notes -->
  <div class="mb-4">
    <label class="block text-sm font-medium text-gray-700 mb-1" for="notes">Additional Notes</label>
    <textarea
      id="notes"
      placeholder="Add any additional notes here"
      class="w-full p-2 bg-gray-100 text-gray-800 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
      rows="3"
    ></textarea>
  </div>