---
const emails = [
  { title: "UX Design: Design Trends 2016", published: "12/1/16", updated: "22 Hours Ago" },
  { title: "2015 - Year in Review", published: "12/29/15", updated: "3 Days Ago" },
  { title: "Design Awards: Best Designs of 2015", published: "12/28/15", updated: "4 Days Ago" },
  { title: "Spotlight: Joe Roberto, UI Design", published: "12/22/15", updated: "7 Days Ago" },
  { title: "Mobile Application Design - 101", published: "12/18/15", updated: "13 Days Ago" },
];
---

<div class="bg-white w-3/6 h-full overflow-y-auto shadow-lg border-r p-12 mt-12">
  <h2 class="text-xl font-semibold text-gray-800 mb-8">Inbox</h2>
  <ul class="space-y-2">
    {emails.map((email, index) => (
      <li 
        class={`p-2 rounded-lg cursor-pointer ${
          index === 0 ? 'bg-blue-100 border border-blue-300' : 'hover:bg-gray-100'
        }`}
      >
        <h3 class="text-base font-semibold text-gray-800 truncate">{email.title}</h3>
        <p class="text-sm text-gray-500">
          <span>Published: {email.published}</span>
          <span> Â· Updated: {email.updated}</span>
        </p>
      </li>
    ))}
  </ul>
</div>