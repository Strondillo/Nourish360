<script>
    // Modal visibility state
    let isOpen = false;
  
    // Toggle modal visibility
    function toggleModal() {
      isOpen = !isOpen;
      const modal = document.getElementById('userModal');
      const modalContent = document.getElementById('userModalContent');
      if (modal && modalContent) {
        modal.style.display = isOpen ? 'block' : 'none';
        modalContent.style.display = isOpen ? 'block' : 'none';
      }
    }
  
    // Expose the function to the global scope
    window.openAddUserModal = () => {
      isOpen = true;
      const modal = document.getElementById('userModal');
      const modalContent = document.getElementById('userModalContent');
      if (modal && modalContent) {
        modal.style.display = 'block';
        modalContent.style.display = 'block';
      }
    };
  </script>
  
  <div>
    <!-- Modal Overlay -->
    <div id="userModal" class="fixed inset-0 bg-black bg-opacity-50 hidden"></div>
  
    <!-- Modal Content -->
    <div
      class="fixed bg-white p-6 rounded-lg shadow-md w-1/3 mx-auto top-1/4 hidden"
      id="userModalContent"
    >
      <h2 class="text-xl font-bold mb-4">Add New User</h2>
      <form>
        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Name</label>
          <input type="text" class="w-full border px-3 py-2 rounded" />
        </div>
        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Email</label>
          <input type="email" class="w-full border px-3 py-2 rounded" />
        </div>
        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Role</label>
          <select class="w-full border px-3 py-2 rounded">
            <option value="Doctor">Doctor</option>
            <option value="RND">RND</option>
          </select>
        </div>
        <div class="flex justify-end">
          <button
            id="cancelButton"
            type="button"
            class="mr-2 px-4 py-2 bg-gray-200 rounded"
            onclick="toggleModal()"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="px-4 py-2 bg-blue-500 text-white rounded"
          >
            Add
          </button>
        </div>
      </form>
    </div>
  </div>
  