  <div class="sidebar-content">
    <!-- Logo Section -->
    <div class="logo">
      <a href="/" class="no-underline">
        <img src="/Logo.png" alt="Nourish360 Logo" class="logo-img hover:opacity-80 transition-opacity duration-300" />
