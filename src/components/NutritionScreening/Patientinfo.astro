<h2 class="text-center text-lg font-bold font-sans mb-4 text-black">Patient Information</h2>

<div class="grid grid-cols-2 gap-x-4 gap-y-6">
  <!-- First Row -->
  <div class="field">
    <label for="name" class="font-semibold text-sm text-black">*Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="ml-5 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-80"
    />
  </div>
  <div class="field">
    <label for="age" class="font-semibold text-sm text-black">*Age:</label>
    <input
      type="number"
      id="age"
      name="age"
      required
      class="ml-6 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>
  <div class="field">
    <label for="gender" class="font-semibold text-sm text-black">*Gender:</label>
    <select
      id="gender"
      name="gender"
      required
      class="ml-3 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    >
      <option value="" disabled selected>Select</option>
      <option value="Male">Male</option>
      <option value="Female">Female</option>
    </select>
  </div>

  <!-- Second Row -->
  <div class="field">
    <label for="weight" class="font-semibold text-sm text-black">*Weight:</label>
    <input
      type="number"
      id="weight"
      name="weight"
      placeholder="in kg"
      required
      class="ml-1 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>
  <div class="field">
    <label for="height" class="font-semibold text-sm text-black">*Height:</label>
    <input
      type="number"
      id="height"
      name="height"
      placeholder="in cm"
      required
      class="ml-4 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>
  <div class="field">
    <label for="bmi" class="font-semibold text-sm text-black">*BMI:</label>
    <input
      type="text"
      id="bmi"
      name="bmi"
      readonly
      class="mt-1 ml-6 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none w-52"
    />
  </div>

  <!-- Risk Level Selection -->
  <div class="field col-span-2">
    <label for="risk" class="font-semibold text-sm text-black">*Risk Level:</label>
    <select
      id="risk"
      name="risk"
      required
      class="ml-1 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    >
      <option value="" disabled selected>Select Risk Level</option>
      <option value="High">High Risk</option>
      <option value="Moderate">Moderate Risk</option>
      <option value="Low">Low Risk</option>
    </select>
  </div>

  <!-- Large Text Areas -->
  <div class="field relative col-span-1">
    <label
      for="medical_diagnosis"
      class="absolute -top-4 left-0 text-black text-sm font-semibold px-1 mt-3"
    >
      *Medical Diagnosis:
    </label>
    <textarea
      id="medical_diagnosis"
      name="medical_diagnosis"
      required
      class="mt-5 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 h-36 w-full"
    ></textarea>
  </div>
  
  <div class="field relative col-span-1">
    <label
      for="diet_prescription"
      class="absolute -top-4 left-0 text-black text-sm font-semibold px-1 mt-3"
    >
      *Diet Prescription:
    </label>
    <textarea
      id="diet_prescription"
      name="diet_prescription"
      required
      class="mt-5 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 h-36 w-full"
    ></textarea>
  </div>
</div>