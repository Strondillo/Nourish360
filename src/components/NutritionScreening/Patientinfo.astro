<div class="patient-info">
    <h2>Patient Information</h2>
  
    <div class="info-grid">
      <div class="field">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div class="field">
        <label for="hrn">HRN:</label>
        <input type="text" id="hrn" name="hrn" required />
      </div>
      <div class="field">
        <label for="ward">Ward/Room No.:</label>
        <input type="text" id="ward" name="ward" required />
      </div>
      <div class="field">
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" required />
      </div>
      <div class="field">
        <label for="sex">Sex:</label>
        <select id="sex" name="sex" required>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
      </div>
      <div class="field">
        <label for="height">Height:</label>
        <input type="text" id="height" name="height" required />
      </div>
      <div class="field">
        <label for="weight">Weight:</label>
        <input type="text" id="weight" name="weight" required />
      </div>
      <div class="field">
        <label for="diagnosis">Medical Diagnosis:</label>
        <textarea id="diagnosis" name="diagnosis"></textarea>
      </div>
      <div class="field">
        <label for="diet">Diet Order:</label>
        <input type="text" id="diet" name="diet" required />
      </div>
    </div>
  
    <style>
      .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
      }
      .field {
        display: flex;
        flex-direction: column;
      }
      label {
        font-weight: bold;
      }
      input, select, textarea {
        padding: 0.5rem;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
    </style>
  </div>
  