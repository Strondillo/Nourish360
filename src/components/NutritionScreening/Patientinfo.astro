<h2 class="text-center text-lg font-bold font-sans mb-4 text-black">Patient Information</h2>

<div class="grid grid-cols-2 gap-x-4 gap-y-6">
  <!-- First Row -->
  <div class="field">
    <label for="name" class="font-semibold text-sm text-black">*Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class=" ml-3 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>
  <div class="field">
    <label for="age" class="font-semibold text-sm text-black">*Age:</label>
    <input
      type="number"
      id="age"
      name="age"
      required
      class=" ml-7 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>
  <div class="field">
    <label for="sex" class="font-semibold text-sm text-black">*Sex:</label>
    <select
      id="sex"
      name="sex"
      required
      class=" ml-7 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    >
      <option></option>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
  </div>

  <!-- Second Row -->
  <div class="field ">
    <label for="address" class="font-semibold text-sm text-black">*Address:</label>
    <input
      type="text"
      id="address"
      name="address"
      required
      class="mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>
  <div class="field">
    <label for="height" class="font-semibold text-sm text-black">*Height:</label>
    <input
      type="text"
      id="height"
      name="height"
      required
      class=" ml-2 mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>
  <div class="field ">
    <label for="weight" class="font-semibold text-sm text-black">*Weight:</label>
    <input
      type="text"
      id="weight"
      name="weight"
      required
      class="mt-1 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 w-52"
    />
  </div>

  <!-- Large Text Areas -->
  <div class="field relative col-span-1">
    <label
      for="diagnosis"
      class="absolute -top-4 left-0 text-black text-sm font-semibold px-1 mt-3"
    >
    *Medical Diagnosis:
    </label>
    <textarea
      id="diagnosis"
      name="diagnosis"
      required
      class="mt-5 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 h-36 w-full"
    ></textarea>
  </div>
  <div class="field relative col-span-1">
    <label
      for="diet"
      class="absolute -top-4 left-0 text-black text-sm font-semibold px-1 mt-3"
    >
    *Diet Prescription:
    </label>
    <textarea
      id="diet"
      name="diet"
      required
      class="mt-5 p-2 border border-gray-300 rounded-md bg-amber-50 focus:outline-none focus:ring-2 focus:ring-blue-400 h-36 w-full"
    ></textarea>
  </div>
  
</div>