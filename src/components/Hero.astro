---
const { title = "Welcome to Nourish360", subtitle = "Your path to a healthier lifestyle", buttonText = "Get Started", buttonLink = "/Sign-in" } = Astro.props;
---

<style>
:root {
  --button-background: rgba(19, 78, 74, 1); /* Updated button background color */
  --button-foreground: #fff;
  --button-hover-background: rgba(19, 78, 74, 0.8); /* Slightly transparent for hover effect */
}
</style>

<section class="hero bg-white text-center py-20 w-full">
  <h1 class="text-4xl font-bold text-teal-900 mb-4">{title}</h1>
  <p class="text-lg text-gray-700 mb-8">{subtitle}</p>
  <a href={buttonLink} class="text-white py-2 px-6 rounded-full text-lg font-semibold transition no-underline hover:no-underline hover:text-white" style="background-color: var(--button-background);" onmouseover="this.style.backgroundColor='var(--button-hover-background)';" onmouseout="this.style.backgroundColor='var(--button-background)';">
    {buttonText}
  </a>
</section>