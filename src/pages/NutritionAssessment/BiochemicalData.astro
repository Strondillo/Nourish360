---
// BiochemicalData.astro
import Layout from "../../layouts/Layout.astro";

// Mock data for the sections
const assessmentData = {
    title: "Biochemical Data, Anthropometric Measurements, Comparative Standards, and Nutrition-Focused Physical Findings",
    biochemicalData: {
        title: "Biochemical Data (BD)",
        description: "Glucose/Endocrine Profile: HbA1c: 7.0% (ref 4.3 - 5.6) Blood glucose, fasting: 8.2 mmol/L (ref 4.0 - 6.0)",
        lastUpdated: "5 mins ago"
    },
    anthropometric: {
        title: "Anthropometric Measurements (AD)",
        description: "Weight: 270 lbs. Weight change: increase of 50 lbs/5 years. Height: 5'8.5”. BMI: 38 kg/m²",
        lastUpdated: "3 mins ago"
    },
    physicalFinding: {
        title: "Nutrition-Focused Physical Finding (PD)",
        description: "Overall appearance: Increased body adiposity",
        lastUpdated: "2 mins ago"
    },
    comparativeStandards: {
        title: "Comparative Standards (CS)",
        description: "Low Activity beyond baseline but fewer than 150 minutes a week",
        lastUpdated: "1 min ago"
    }
};
---

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/css/uikit.min.css" />
<script src="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/js/uikit.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/js/uikit-icons.min.js"></script>

<Layout title={assessmentData.title}>
    <div class="bg-[#EDF9FF] min-h-screen w-full flex justify-center items-start">
        <div class="w-full max-w-6xl py-10">
            <h3 class="text-3xl font-bold text-center mb-8">{assessmentData.title}</h3>
            <div class="uk-container">
                <!-- Grid for the cards -->
                <div class="uk-grid-small uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-match" uk-grid>
                    <!-- Card for Biochemical Data -->
                    <div>
                        <div class="uk-card uk-card-default uk-card-body">
                            <h3 class="uk-card-title">{assessmentData.biochemicalData.title}</h3>
                            <p>{assessmentData.biochemicalData.description}</p>
                            <p class="uk-text-meta">Last updated: {assessmentData.biochemicalData.lastUpdated}</p>
                        </div>
                    </div>

                    <!-- Card for Anthropometric Measurements -->
                    <div>
                        <div class="uk-card uk-card-default uk-card-body">
                            <h3 class="uk-card-title">{assessmentData.anthropometric.title}</h3>
                            <p>{assessmentData.anthropometric.description}</p>
                            <p class="uk-text-meta">Last updated: {assessmentData.anthropometric.lastUpdated}</p>
                        </div>
                    </div>

                    <!-- Card for Nutrition-Focused Physical Findings -->
                    <div>
                        <div class="uk-card uk-card-default uk-card-body">
                            <h3 class="uk-card-title">{assessmentData.physicalFinding.title}</h3>
                            <p>{assessmentData.physicalFinding.description}</p>
                            <p class="uk-text-meta">Last updated: {assessmentData.physicalFinding.lastUpdated}</p>
                        </div>
                    </div>

                    <!-- Card for Comparative Standards -->
                    <div class="uk-width-expand@m ">
                        <div class="uk-card uk-card-default uk-card-body ">
                            <button class="absolute top-2 right-2 uk-icon-button" >
                                <uk-icon icon="pencil" style="color: #1e3a8a; width: 24px; height: 24px;"></uk-icon>
                            </button>
                            <h3 class="uk-card-title">{assessmentData.comparativeStandards.title}</h3>
                            <p>{assessmentData.comparativeStandards.description}</p>
                            <p class="uk-text-meta">Last updated: {assessmentData.comparativeStandards.lastUpdated}</p>
                        </div>
                    </div>
                </div>

                <!-- Navigation Buttons -->
                <div class="uk-flex uk-flex-between uk-margin-top">
                    <button 
                        type="button" 
                        onclick="history.back()" 
                        class="uk-button uk-button-default"
                        style="background-color:#C4C4C4; border-radius: 4px;">
                        Back
                    </button>
                    <button 
                        type="button" 
                        onclick="window.location.href='/NutritionAssessment/NextPage'" 
                        class="uk-button uk-button-primary"
                        style="border-radius: 4px;">
                        Next
                    </button>
                </div>
            </div>
        </div>
    </div>
</Layout>